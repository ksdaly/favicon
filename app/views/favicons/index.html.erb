<row>
  <div class="col-sm-12 favicon-heading-wrapper">
    <h1>Favicon Finder</h1>
  </div>
</row>

<row>
  <%= form_for @site, url: root_path, html: { method: :get, class: "form-inline" } do |f| %>
    <div class="col-sm-10 form-group">
      <%= f.text_field :input_url, value: @input_url, class: "col-sm-12 form-control" %>
    </div>
    <%= f.submit "Find Favicon", class: "btn btn-default" %>
  <% end %>
</row>

<row>
  <div class="col-sm-12 icon-wrapper">
    <% if @error %>
      <div class="col-sm-3"><%= @error %></div>
    <% end %>

    <% if @site.favicon_url %>
      <img src= <%= @site.favicon_url %> width="32" height="32"/>
    <% else %>
      <% if @site.persisted? %>
        <div class="col-sm-3">Favicon could not be found</div>
      <% end %>
    <% end %>
  </div>
</row>
